<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/custom_backgroud_trangchu">
    <TextView
        android:textColor="#D54D22"
        android:textSize="30sp"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:id="@+id/textviewtitleallplaylist"
        android:text="ALL PLAYLIST"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#6F647AEC"/>
    <ListView
        android:layout_below="@+id/textviewtitleallplaylist"
        android:id="@+id/listviewallplaylist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</RelativeLayout>